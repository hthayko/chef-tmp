<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Vue.js Navigation Menu</title>

    <style>

	*{
		margin:0;
		padding:0;
	}

	body{
		font:15px/1.3 'Open Sans', sans-serif;
		color: #5e5b64;
		text-align:center;
	}

	a, a:visited {
		outline:none;
		color:#1c5f7a;
	}

	a:hover{
		text-decoration:none;
	}

	section, footer, header, aside, nav{
		display: block;
	}

	nav{
		display:inline-block;
		margin:60px auto 45px;
		background-color:#1c5f7a;
		box-shadow:0 1px 1px #ccc;
		border-radius:2px;
	}

	nav a{
		display:inline-block;
		padding: 18px 30px;
		color:#fff !important;
		font-weight:bold;
		font-size:16px;
		text-decoration:none !important;
		line-height:1;
		text-transform: uppercase;
		background-color:transparent;

		-webkit-transition:background-color 0.25s;
		-moz-transition:background-color 0.25s;
		transition:background-color 0.25s;
	}

	nav a:first-child{
		border-radius:2px 0 0 2px;
	}

	nav a:last-child{
		border-radius:0 2px 2px 0;
	}

	nav.home .home,
	nav.rawInput .rawInput,
	nav.search .search,
	nav.contact .contact{
		background-color:#5ec5c0;
	}

	p{
		font-size:22px;
		font-weight:bold;
		color:#7d9098;
	}

	p b{
		color:#ffffff;
		display:inline-block;
		padding:5px 10px;
		background-color:#c4d7e0;
		border-radius:2px;
		text-transform:uppercase;
		font-size:18px;
	}


  .bar{
      background-color:#1c5f7a;

      background-image:-webkit-linear-gradient(top, #1c5f7a, #5ec5c0);
      background-image:-moz-linear-gradient(top, #1c5f7a, #5ec5c0);
      background-image:linear-gradient(top, #1c5f7a, #5ec5c0);

      box-shadow: 0 1px 1px #ccc;
      border-radius: 2px;
      width: 400px;
      padding: 14px;
      margin: 45px auto 20px;
      position:relative;
  }

  .bar input{
      background:#fff no-repeat 13px 13px;
      background-image:url(data:image/png;base64,);

      border: none;
      width: 100%;
      line-height: 19px;
      padding: 11px 0;

      border-radius: 2px;
      box-shadow: 0 2px 8px #c4c4c4 inset;
      text-align: left;
      font-size: 14px;
      font-family: inherit;
      color: #738289;
      font-weight: bold;
      outline: none;
      text-indent: 40px;
  }

  .info{
      background-color:#1c5f7a;

      background-image:-webkit-linear-gradient(top, #1c5f7a, #5ec5c0);
      background-image:-moz-linear-gradient(top, #1c5f7a, #5ec5c0);
      background-image:linear-gradient(top, #1c5f7a, #5ec5c0);

      box-shadow: 0 1px 1px #ccc;
      border-radius: 2px;
      width: 400px;
      padding: 14px;
      margin: 45px auto 20px;
      position:relative;
  }

  .info input{
      background:#fff no-repeat 13px 13px;

      border: none;
      width: 100%;
      line-height: 19px;
      padding: 11px 0;

      border-radius: 2px;
      box-shadow: 0 2px 8px #c4c4c4 inset;
      text-align: left;
      font-size: 14px;
      font-family: inherit;
      color: #738289;
      font-weight: bold;
      outline: none;
      text-indent: 40px;
  }

img{
  display: block;
   margin-left: auto;
   margin-right: auto;
    max-width: 50%;
    height: auto;
}

ul{
    list-style: none;
    width: 450px;
    margin: 0 auto;
    text-align: left;
}

ul li{
    border-bottom: 1px solid #ddd;
    padding: 2px;
    overflow: hidden;
}

ul li img{
    width:90px;
    height:60px;
    float:left;
    border:none;
}

ul li p{
    margin-left: 105px;
    font-weight: bold;
    padding-top: 12px;
    color:#6e7a7f;
    font:15px/1.3 'Open Sans', sans-serif;
}

    </style>

</head>
<body>

<div id="main">
  <img src="images/logos/SansSerifLogo-v2.png" id="delishlogo">
	<nav v-bind:class="active" v-on:click.prevent>
    <a href="#" class="home" v-on:click="makeActive('home')">Home</a>
		<a href="#" class="rawInput" v-on:click="makeActive('rawInput')">Recipe Input</a>
		<a href="#" class="search" v-on:click="makeActive('search')">Search</a>
	</nav>
  <div v-if="active === 'home'">
    <div v-if="!loggedIn" class="info">
       <input type="text" v-model="username" placeholder="Enter your username" />
       <input type="password" v-model="password" placeholder="Enter your password" />
     </div>
     <form>
       <button v-if="!loggedIn" v-on:click="logIn(username, $event)">Log in</button>
       <button v-else @click.prevent="logOut">Log out</button>
       {{msg}}
   </form>
  </div>
  <div v-else-if="active === 'search'">
    <div class="bar">
      <input type="text" v-model="searchString" placeholder="Enter your search terms" />
    </div>
    <ul>
        <li v-for="recipe in filteredRecipes">
            <a v-bind:href="recipe.url"><img v-bind:src="recipe.image" /></a>
            <p>{{recipe.title}}</p>
        </li>
    </ul>
   </div>
   <div v-else>
     <div>
        <h3>Ingredients</h3>
        <textarea cols="40" rows="5" placeholder="One Ingredient Per Line" class="inp"></textarea>
      </div>
      <div>
        <h3>Instructions</h3>
        <textarea cols="40" rows="5" placeholder="One Instruction Per Line" class="inp"></textarea>
      </div>
      <input type="button" onclick="location.href='http://web.stanford.edu/~kramerh/delish/index.html';" value="Submit" />
   </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/vue/2.1.0/vue.min.js"></script>
<script>

var demo = new Vue({
	el: '#main',
	data: {
		active: 'home',
    searchString: '',
    username: '',
    password: '',
    loggedIn: false,
    msg: '',
    recipes: [
        {
            "title": "MasterChef Junior Seared Steaks & Maple Brussels Sprouts",
            "url": "https://www.blueapron.com/recipes/tune-in-to-fox-4-20-at-8-7c-we-ll-reveal-the-recipe-4-23",
            "image": "https://media.blueapron.com/recipes/3061/c_main_dish_images/1523888126-1-0003-5042/0430_FPM_Steak_5509_WEB_Center_high_also_thumb.jpg"
        },
        {
            "title": "Florentine Roast Pork & Salsa Verde with Saut√©ed Vegetables",
            "url": "https://www.blueapron.com/recipes/florentine-roast-pork-salsa-verde-with-sauteed-vegetables",
            "image": "https://media.blueapron.com/recipes/2898/c_main_dish_images/1521568863-1-0025-2556/0423_FPM_Tuscan-Pork_3912_WEB_Center_high_also_thumb.jpg"
        },
        {
            "title": "Baked Harissa Chicken with Farro & Vegetable Salad",
            "url": "https://www.blueapron.com/recipes/baked-harissa-chicken-with-farro-vegetable-salad",
            "image": "https://media.blueapron.com/recipes/2911/c_main_dish_images/1522258821-1-0019-8808/0430_2PP_Harissa-Bakd-Chicken_4362_WEB_Center_high_also_thumb.jpg"
        },
        {
            "title": "Sheet Pan Pesto Salmon with Roasted Vegetable Medley",
            "url": "https://www.blueapron.com/recipes/sheet-pan-pesto-salmon-with-roasted-vegetable-medley",
            "image": "https://media.blueapron.com/recipes/2902/c_main_dish_images/1523553680-1-0005-3899/0423_FPF_Salmon_4128_WEB_Center_high_also_thumb.jpg"
        },
        {
            "title": "Mexico City Chicken Tinga Tostadas with Avocado & Refried Beans",
            "url": "https://www.blueapron.com/recipes/mexico-city-chicken-tinga-tostadas-with-avocado-refried-beans",
            "image": "https://media.blueapron.com/recipes/2907/c_main_dish_images/1522163313-1-0026-9285/0430_2PRE07_Spicy-Chicken-Tinga_4390_WEB_Center_high_also_thumb.jpg"
        },
        {
            "title": "Ginger Pork Burgers with Black Bean Mayo & Roasted Broccoli",
            "url": "https://www.blueapron.com/recipes/ginger-pork-burgers-with-black-bean-mayonnaise-furikake-broccoli",
            "image": "https://media.blueapron.com/recipes/2850/c_main_dish_images/1519164998-1-0012-5523/0326_2PRE08_Ginger-Pork-Burgers_2041_WEB_Center_high_also_thumb.jpg"
        },
        {
            "title": "Seared Salmon & Spicy Orange Salsa with Quinoa & Carrot Salad",
            "url": "https://www.blueapron.com/recipes/salmon-spicy-orange-salsa-with-quinoa-carrot-salad",
            "image": "https://media.blueapron.com/recipes/2891/c_main_dish_images/1521666264-1-0005-2407/0423_2PF_Salmon-Spicy-Salsa_3859_WEB_Center_high_also_thumb.jpg"
        },
        {
            "title": "Parisian Steak Frites",
            "url": "https://www.blueapron.com/recipes/steak-frites-herb-butter-with-roasted-broccoli-aioli-3",
            "image": "https://media.blueapron.com/recipes/2884/c_main_dish_images/1521043763-1-0002-7218/0416_2PM_Steak-Frites_3634_WEB_Center_high_also_thumb.jpg"
        }
    ]
	},
  computed: {
      filteredRecipes: function () {
          var recipes_array = this.recipes,
              searchString = this.searchString;

          if(!searchString){
              return recipes_array;
          }

          searchString = searchString.trim().toLowerCase();

          recipes_array = recipes_array.filter(function(item){
              if(item.title.toLowerCase().indexOf(searchString) !== -1){
                  return item;
              }
          })
          return recipes_array;;
      }
  },
  methods: {
    makeActive: function(item){
      this.active = item;
    },
    logIn: function(userName, event) {
        event.preventDefault();
        this.loggedIn = true;
        this.msg = 'Welcome, ' + userName + '!';
    },
    logOut: function() {
        this.loggedIn = false;
        this.msg = 'So long!';
    }
  }
});
</script>
</body>
</html>
